<h1>Tiny URL</h1>

<table>
  <tr>
    <th>Long URL</th>
    <th>Short URL</th>
    <th></th>
    <th></th>
  </tr>

<% @shorts.each do |short| %>
  <tr>
    <td><%= link_to short.long, short.long %></td>
    <td><%= link_to short.id, short.long %></td>
    <td><%= link_to 'Show', short %></td>
    <td><%= link_to 'Edit', edit_short_path(short) %></td>
    <td><%= link_to 'Destroy', short, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

